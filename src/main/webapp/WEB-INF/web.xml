<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>Intranet Escolar</display-name>
    
    <!-- Configuración de la aplicación -->
    <context-param>
        <param-name>appName</param-name>
        <param-value>Intranet Escolar - Colegio Peruano Chino Diez de Octubre</param-value>
    </context-param>
    
    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Cambiar a true en producción con HTTPS -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    
    <!-- Configuración de recursos -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/intranetDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <!-- Página de inicio -->
    <welcome-file-list>
    <welcome-file>views/login.jsp</welcome-file>
    </welcome-file-list>

    
    <!-- Configuración de errores -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error/500.jsp</location>
    </error-page>
</web-app>

